{
  "version": 1,
  "hooks": {
    "afterFileEdit": [
      {
        "command": "node hooks/after-file-edit.js"
      },
      {
        "command": "node hooks/format-markdown.js"
      },
      {
        "command": "node hooks/revert-ingest-if-edited.js"
      }
    ],
    "stop": [
      {
        "command": "node hooks/on-stop.js"
      },
      {
        "command": "node hooks/memory-reminder.js"
      }
    ]
  }
}
